{
    "manifest_version": 3,
    "name": "Tab Stack Manager",
    "version": "1.0",
    "description": "Organize your tabs into stacks for easy access.",
    "permissions": ["tabs", "contextMenus", "storage"],
    "background": {
      "service_worker": "background/background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {     
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true
    }
  }