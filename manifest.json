{
    "manifest_version": 2,  
    "name": "Tab Stack Manager",
    "version": "1.0",
    "author": "Your Name",
    "description": "Manage your browser tabs effectively with stacks.",
  

    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    
    "browser_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png"
      },
      "default_popup": "popup.html",
      "default_title": "Open Tab Stack Manager"
    },
  
    "permissions": [
      "tabs",         
      "storage"         
    ],
  
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html"
  }
  